@model List<SalesDetails>

<table id="ExpTable" class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <input type="text" class="form-control" name="SalesDetails[@i].ProductCode" value="@Model[i].ProductCode" />
                </td>
                <td>
                    <input type="text" class="form-control" name="SalesDetails[@i].ProductName" value="@Model[i].ProductName" />
                </td>
                <td>
                    <input type="number" class="form-control" name="SalesDetails[@i].Price" value="@Model[i].Price" />
                </td>
                   <td>
                    <input type="text" class="form-control" name="SalesDetails[@i].Quantity" value="@Model[i].Quantity" />
                </td>
                <td>
                    @if (i > 0)
                    {
                        <button type="button" class="btn btn-danger" onclick="DeleteItem(this)">Remove</button>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

<input type="hidden" id="hdnLastIndex" value="@Model.Count" />
